---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPostsByUris } from '../lib/wordpress';
import { generateExcerpt, getOptimizedImage } from '../lib/utils';

// Fetch the popular posts
const popularPostUris = [
  '/50-ways-to-start-fresh/',
  '/33-questions-for-an-interview-with-yourself/',
  '/100-ways-to-live-a-better-life/'
];

const posts = await getPostsByUris(popularPostUris);

// Map the posts to the format we need, preserving the order
const popularPosts = popularPostUris.map(uri => {
  const post = posts.find(p => p.uri === uri);
  if (!post) return null;
  
  const optimizedImage = getOptimizedImage(post.featuredImage, 300, post.title);
  
  return {
    title: post.title,
    excerpt: generateExcerpt(post.content, 20),
    slug: post.slug,
    uri: post.uri,
    featuredImage: optimizedImage || {
      url: "https://dragosroua.com/wp-content/uploads/default-featured.jpg",
      alt: `Featured image for ${post.title}`,
      width: 300,
      height: 200
    },
    date: post.date
  };
}).filter(Boolean); // Remove any null entries
---

<BaseLayout 
  title="404 - Page Not Found | Dragos Roua"
  description="The page you're looking for doesn't exist. Check out some of our most popular posts instead."
  canonical="https://dragosroua.com/404/"
>
  <div class="error-page">
    <div class="error-hero">
      <h1 class="error-code">404</h1>
      <h2 class="error-message">Bummer! That content is no longer available.</h2>
      <p class="error-description">Why don't you browse some of the most popular posts here?</p>
    </div>

    <div class="popular-posts">
      <h3 class="popular-title">Popular Posts</h3>
      <div class="posts-grid">
        {popularPosts.map((post) => (
          <article class="post-card">
            <a href={post.uri} class="post-link" aria-label={`Read ${post.title}`}>
              <div class="post-image">
                <img 
                  src={post.featuredImage.url}
                  alt={post.featuredImage.alt}
                  width={post.featuredImage.width}
                  height={post.featuredImage.height}
                  loading="lazy"
                  decoding="async"
                />
              </div>
              <div class="post-content">
                <h4 class="post-title" set:html={post.title} />
                <p class="post-excerpt">{post.excerpt}</p>
                <time class="post-date" datetime={post.date}>
                  {new Date(post.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long', 
                    day: 'numeric'
                  })}
                </time>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>

    <div class="error-actions">
      <a href="/" class="btn-primary">Go to Homepage</a>
      <a href="/blog/" class="btn-secondary">Browse All Posts</a>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    text-align: center;
  }

  .error-hero {
    margin-bottom: 4rem;
  }

  .error-code {
    font-size: 8rem;
    font-weight: 900;
    color: #667eea;
    margin: 0;
    line-height: 1;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .error-message {
    font-size: 2rem;
    font-weight: 700;
    color: #2d3748;
    margin: 2rem 0 1rem;
    line-height: 1.3;
  }

  .error-description {
    font-size: 1.2rem;
    color: #4a5568;
    margin: 0 0 3rem;
    line-height: 1.6;
  }

  .popular-posts {
    margin-bottom: 4rem;
  }

  .popular-title {
    font-size: 2rem;
    font-weight: 700;
    color: #2d3748;
    margin: 0 0 2rem;
    text-align: center;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 2rem 0;
  }

  .post-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: 1.5rem;
    text-align: left;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2d3748;
    margin: 0 0 0.75rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-excerpt {
    color: #4a5568;
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0 0 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-date {
    color: #718096;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  .btn-primary:hover {
    background: #5568d3;
    border-color: #5568d3;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: #667eea;
    border-color: #667eea;
  }

  .btn-secondary:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  /* Tablet responsive */
  @media (max-width: 768px) {
    .error-page {
      padding: 1rem;
    }

    .error-code {
      font-size: 6rem;
    }

    .error-message {
      font-size: 1.5rem;
    }

    .error-description {
      font-size: 1rem;
    }

    .popular-title {
      font-size: 1.5rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .btn-primary,
    .btn-secondary {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .error-code {
      font-size: 4rem;
    }

    .error-message {
      font-size: 1.25rem;
    }

    .post-content {
      padding: 1rem;
    }
  }
</style>