---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductGrid from '../components/ProductGrid.astro';

const seoData = {
  title: 'Books I Wrote - Dragos Roua',
  description: 'A list of the most popular books I wrote since I started this blog. Topics: personal development, productivity, and even a small sci fi novel.',
  canonical: 'https://dragosroua.com/books/',
  ogImage: '/images/default-featured-1200-630.png'
};
---

<BaseLayout seoData={seoData}>
  <main>
    <article class="page">
      <h1>Books I Wrote</h1>
      
      <div class="wp-content">
        <!-- Amazon Kindle Embeds - Keep these as they are -->
        <div class="wp-block-columns is-layout-flex wp-container-core-columns-is-layout-9d6595d7 wp-block-columns-is-layout-flex">
          <div class="wp-block-column is-layout-flow wp-block-column-is-layout-flow">
            <figure class="wp-block-embed-amazon-kindle wp-block-embed is-type-rich is-provider-amazon">
              <div class="wp-block-embed__wrapper">
                <iframe loading="lazy" title="100 Ways To Live A Better Life" type="text/html" width="1200" height="550" frameborder="0" allowfullscreen style="max-width:100%" src="https://read.amazon.com/kp/card?preview=inline&#038;linkCode=kpd&#038;ref_=k4w_oembed_0aecKUTxVRh4kj&#038;asin=B004SIQOOQ&#038;tag=kpembed-20"></iframe>
              </div>
            </figure>
          </div>

          <div class="wp-block-column is-layout-flow wp-block-column-is-layout-flow">
            <figure class="wp-block-embed-amazon-kindle wp-block-embed is-type-rich is-provider-amazon">
              <div class="wp-block-embed__wrapper">
                <iframe loading="lazy" title="100 Ways To Screw Up Your Life" type="text/html" width="1200" height="550" frameborder="0" allowfullscreen style="max-width:100%" src="https://read.amazon.com/kp/card?preview=inline&#038;linkCode=kpd&#038;ref_=k4w_oembed_CKI2PLrPjwitm6&#038;asin=B004WE7AA8&#038;tag=kpembed-20"></iframe>
              </div>
            </figure>
          </div>

          <div class="wp-block-column is-layout-flow wp-block-column-is-layout-flow">
            <figure class="wp-block-embed-amazon-kindle wp-block-embed is-type-rich is-provider-amazon">
              <div class="wp-block-embed__wrapper">
                <iframe loading="lazy" title="Running For My Life: From zero to ultramarathoner" type="text/html" width="1200" height="550" frameborder="0" allowfullscreen style="max-width:100%" src="https://read.amazon.com/kp/card?preview=inline&#038;linkCode=kpd&#038;ref_=k4w_oembed_rcvmFDQuf4kDoR&#038;asin=1520118848&#038;tag=kpembed-20"></iframe>
              </div>
            </figure>
          </div>
        </div>

        <div class="wp-block-columns is-layout-flex wp-container-core-columns-is-layout-9d6595d7 wp-block-columns-is-layout-flex">
          <div class="wp-block-column is-layout-flow wp-block-column-is-layout-flow">
            <figure class="wp-block-embed-amazon-kindle wp-block-embed is-type-rich is-provider-amazon">
              <div class="wp-block-embed__wrapper">
                <iframe loading="lazy" title="Being A Digital Nomad: On living off the grid, providing genuine value and being constructively free" type="text/html" width="1200" height="550" frameborder="0" allowfullscreen style="max-width:100%" src="https://read.amazon.com/kp/card?preview=inline&#038;linkCode=kpd&#038;ref_=k4w_oembed_SBQcWP0GjxYmOt&#038;asin=1491032472&#038;tag=kpembed-20"></iframe>
              </div>
            </figure>
          </div>

          <div class="wp-block-column is-layout-flow wp-block-column-is-layout-flow">
            <figure class="wp-block-embed-amazon-kindle wp-block-embed is-type-rich is-provider-amazon">
              <div class="wp-block-embed__wrapper">
                <iframe loading="lazy" title="The World, Dripping: All you need is attention" type="text/html" width="1200" height="550" frameborder="0" allowfullscreen style="max-width:100%" src="https://read.amazon.com/kp/card?preview=inline&#038;linkCode=kpd&#038;ref_=k4w_oembed_yySMCCM35Fcsk5&#038;asin=B07W3WKZHP&#038;tag=kpembed-20"></iframe>
              </div>
            </figure>
          </div>

          <div class="wp-block-column is-layout-flow wp-block-column-is-layout-flow">
            <figure class="wp-block-embed-amazon-kindle wp-block-embed is-type-rich is-provider-amazon">
              <div class="wp-block-embed__wrapper">
                <iframe loading="lazy" title="Natural Productivity: Assess, Decide, Do" type="text/html" width="1200" height="550" frameborder="0" allowfullscreen style="max-width:100%" src="https://read.amazon.com/kp/card?preview=inline&#038;linkCode=kpd&#038;ref_=k4w_oembed_uqOojPTyWOisio&#038;asin=B004V0ANMU&#038;tag=kpembed-20"></iframe>
              </div>
            </figure>
          </div>
        </div>

        <h2 class="wp-block-heading">Audio</h2>

        <p>Below you'll find a list of audio versions available at this moment for some of the most popular posts on this blog.</p>

        <!-- Replace Gumroad embeds with static product cards -->
        <ProductGrid />
      </div>
    </article>
  </main>
</BaseLayout>

<style>
/* Import the existing WordPress styles to maintain consistency */
.wp-content {
  max-width: none;
}

.wp-block-columns {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  margin: 2rem 0;
}

.wp-block-column {
  flex: 1;
  min-width: 300px;
}

.wp-block-embed {
  margin: 1rem 0;
}

.wp-block-embed iframe {
  width: 100%;
  max-width: 100%;
  height: auto;
  min-height: 400px;
}

.wp-block-heading {
  font-size: 2rem;
  font-weight: 600;
  margin: 3rem 0 1rem 0;
  color: #1a1a1a;
}

@media (max-width: 768px) {
  .wp-block-columns {
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .wp-block-column {
    min-width: auto;
  }
  
  .wp-block-embed iframe {
    min-height: 300px;
  }
}
</style>