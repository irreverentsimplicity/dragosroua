---
interface Props {
  current: {
    title: string;
    slug: string;
    phase: string;
    order: number;
  };
  next?: {
    title: string;
    slug: string;
    phase: string;
    order: number;
  } | null;
  previous?: {
    title: string;
    slug: string;
    phase: string;
    order: number;
  } | null;
  total: number;
  series: Array<{
    title: string;
    slug: string;
    phase: string;
    order: number;
  }>;
}

const { current, next, previous, total, series } = Astro.props;
---

<div class="ultrabalaton-series-nav">
  <div class="series-header">
    <h3 class="series-title">
      <a href="/ultrabalaton-220km-ultra-marathon-series/">üèÉ‚Äç‚ôÇÔ∏è UltraBalaton 220km Series</a>
    </h3>
    <div class="series-progress">
      <span class="current-phase">{current.phase}</span>
      <span class="progress-indicator">Part {current.order} of {total}</span>
    </div>
  </div>

  <div class="series-navigation">
    {previous && (
      <a href={`/${previous.slug}/`} class="nav-link nav-previous">
        <div class="nav-direction">‚Üê Previous</div>
        <div class="nav-phase">{previous.phase}</div>
        <div class="nav-title">{previous.title}</div>
      </a>
    )}
    
    <a href="/ultrabalaton-220km-ultra-marathon-series/" class="nav-link nav-overview">
      <div class="nav-direction">üìñ Series Overview</div>
      <div class="nav-title">View All {total} Posts</div>
    </a>
    
    {next && (
      <a href={`/${next.slug}/`} class="nav-link nav-next">
        <div class="nav-direction">Next ‚Üí</div>
        <div class="nav-phase">{next.phase}</div>
        <div class="nav-title">{next.title}</div>
      </a>
    )}
  </div>

  <div class="series-list">
    <h4>Complete Series:</h4>
    <ol class="series-posts">
      {series.map((post) => (
        <li class={post.slug === current.slug ? 'current-post' : ''}>
          <a href={`/${post.slug}/`}>
            <span class="post-phase">{post.phase}:</span>
            <span class="post-title">{post.title}</span>
          </a>
        </li>
      ))}
    </ol>
  </div>
</div>

<style>
  .ultrabalaton-series-nav {
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    border: 1px solid #cbd5e0;
    border-radius: 12px;
    padding: 1.5rem;
    margin: 2rem 0;
    font-size: 0.9rem;
  }

  .series-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .series-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 700;
  }

  .series-title a {
    color: #667eea;
    text-decoration: none;
  }

  .series-title a:hover {
    color: #5568d3;
    text-decoration: underline;
  }

  .series-progress {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .current-phase {
    background: #667eea;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.8rem;
  }

  .progress-indicator {
    color: #4a5568;
    font-weight: 500;
    font-size: 0.85rem;
  }

  .series-navigation {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .nav-link {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 1rem;
    text-decoration: none;
    display: block;
    transition: all 0.2s ease;
    text-align: center;
  }

  .nav-link:hover {
    background: #f8f9fa;
    border-color: #cbd5e0;
    transform: translateY(-1px);
  }

  .nav-previous {
    text-align: left;
  }

  .nav-next {
    text-align: right;
  }

  .nav-overview {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  .nav-overview:hover {
    background: #5568d3;
    border-color: #5568d3;
    color: white;
  }

  .nav-direction {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
    color: #667eea;
  }

  .nav-overview .nav-direction {
    color: rgba(255, 255, 255, 0.9);
  }

  .nav-phase {
    font-size: 0.8rem;
    color: #667eea;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .nav-title {
    font-weight: 600;
    line-height: 1.3;
    color: #2d3748;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .nav-overview .nav-title {
    color: white;
  }

  .series-list h4 {
    margin: 0 0 1rem 0;
    color: #2d3748;
    font-size: 1rem;
    font-weight: 600;
  }

  .series-posts {
    margin: 0;
    padding-left: 1.5rem;
    list-style: decimal;
  }

  .series-posts li {
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .series-posts li.current-post {
    font-weight: 700;
    background: rgba(102, 126, 234, 0.1);
    padding: 0.25rem 0.5rem;
    margin-left: -0.5rem;
    border-radius: 4px;
  }

  .series-posts a {
    color: #4a5568;
    text-decoration: none;
    display: block;
  }

  .series-posts a:hover {
    color: #667eea;
  }

  .series-posts .current-post a {
    color: #667eea;
  }

  .post-phase {
    font-weight: 600;
    color: #667eea;
  }

  .post-title {
    display: block;
    margin-top: 0.125rem;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .ultrabalaton-series-nav {
      padding: 1rem;
      margin: 1.5rem 0;
    }

    .series-navigation {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .nav-link {
      padding: 0.75rem;
      text-align: center !important;
    }

    .series-progress {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .nav-title {
      font-size: 0.9rem;
    }

    .series-posts {
      padding-left: 1rem;
    }

    .post-title {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .ultrabalaton-series-nav {
      font-size: 0.85rem;
    }

    .nav-link {
      padding: 0.625rem;
    }

    .nav-title {
      font-size: 0.85rem;
      -webkit-line-clamp: 3;
    }
  }
</style>