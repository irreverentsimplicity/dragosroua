<style>
  .addtaskmanager-promo-box {
    display: block !important;  /* Force display */
    width: 100% !important;     /* Force width */
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12px;
    padding: 20px;
    margin: 25px 0;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
  }
  
  .atm-promo-container {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
  }
  
  .atm-screenshot {
    flex: 0 0 auto;
  }
  
  .atm-screenshot img {
    width: 120px;
    height: 180px;
    object-fit: contain;
    border-radius: 18px;
    border: 3px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }
  
  .atm-content {
    flex: 1;
    min-width: 200px;
  }
  
  .atm-tagline {
    color: #ffffff;
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 8px 0;
    line-height: 1.3;
  }
  
  .atm-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    margin: 0 0 6px 0;
    line-height: 1.5;
  }

  .atm-description-last {
    color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    margin: 0 0 15px 0;
    line-height: 1.5;
  }
  
  .atm-download-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #000000;
    color: #ffffff;
    padding: 10px 20px;
    border-radius: 50px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
  
  .atm-download-btn:hover {
    background: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    color: #ffffff;
    text-decoration: none;
  }
  
  @media (max-width: 600px) {
    .addtaskmanager-promo-box {
      padding: 15px;
    }
    
    .atm-promo-container {
      text-align: center;
    }
    
    .atm-screenshot {
      margin: 0 auto;
    }
    
    .atm-content {
      text-align: center;
    }
    
    .atm-tagline {
      font-size: 16px;
    }
    
    .atm-download-btn {
      font-size: 13px;
    }
  }
</style>