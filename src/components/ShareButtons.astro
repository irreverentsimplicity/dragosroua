---
interface Props {
  url: string;
  title: string;
  description?: string;
}

const { url, title, description = '' } = Astro.props;

// Clean title for sharing (remove HTML entities)
const cleanTitle = title.replace(/&#\d+;/g, ' ').replace(/&amp;/g, '&').replace(/&lt;/g, '<').replace(/&gt;/g, '>');

// URL encode for share links
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(cleanTitle);
const encodedDescription = encodeURIComponent(description);

// Email subject and body
const emailSubject = encodedTitle;
const emailBody = encodeURIComponent(`Check out this article: ${cleanTitle}\n\n${url}`);
---

<div class="share-buttons">
  <span class="share-label">Share this post:</span>
  
  <!-- Email -->
  <a 
    href={`mailto:?subject=${emailSubject}&body=${emailBody}`}
    class="share-button share-email"
    aria-label="Share via Email"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
    </svg>
    <span>Email</span>
  </a>
  
  <!-- Twitter/X -->
  <a 
    href={`https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}&via=dragosroua`}
    class="share-button share-twitter"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Share on X (Twitter)"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
    <span>X</span>
  </a>
  
  <!-- LinkedIn -->
  <a 
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
    class="share-button share-linkedin"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Share on LinkedIn"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    <span>LinkedIn</span>
  </a>
  
  <!-- Native share button (mobile) -->
  <button class="share-button native-share" aria-label="Share this post">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"/>
    </svg>
    <span>Share</span>
  </button>
</div>

<script>
  // Only add JavaScript for native share functionality
  const nativeShareButton = document.querySelector('.native-share');
  
  if (nativeShareButton && navigator.share) {
    // Show native share button only if API is supported
    nativeShareButton.style.display = 'inline-flex';
    
    nativeShareButton.addEventListener('click', async () => {
      try {
        await navigator.share({
          title: document.title,
          text: document.querySelector('meta[name="description"]')?.content || '',
          url: window.location.href
        });
      } catch (err) {
        // User cancelled or error - do nothing
      }
    });
  }
</script>

<style>
  .share-buttons {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin: 2rem 0;
    padding: 1.5rem;
    background: #f7fafc;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
  }
  
  .share-label {
    font-weight: 600;
    color: #4a5568;
    margin-right: 0.5rem;
  }
  
  .share-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s;
    border: 1px solid transparent;
  }
  
  /* Hide native share by default, show via JS if supported */
  .native-share {
    display: none;
    background: #667eea;
    color: white;
    border: 1px solid #667eea;
    cursor: pointer;
    font-family: inherit;
  }
  
  .native-share:hover {
    background: #5568d3;
    border-color: #5568d3;
    transform: translateY(-1px);
  }
  
  .share-twitter {
    background: #1da1f2;
    color: white;
  }
  
  .share-twitter:hover {
    background: #1a91da;
    transform: translateY(-1px);
  }
  
  .share-linkedin {
    background: #0077b5;
    color: white;
  }
  
  .share-linkedin:hover {
    background: #006399;
    transform: translateY(-1px);
  }
  
  .share-email {
    background: #4a5568;
    color: white;
  }
  
  .share-email:hover {
    background: #2d3748;
    transform: translateY(-1px);
  }
  
  .share-button svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }
  
  /* Mobile responsive */
  @media (max-width: 640px) {
    .share-buttons {
      padding: 1rem;
      gap: 0.5rem;
    }
    
    .share-label {
      width: 100%;
      margin-bottom: 0.5rem;
    }
    
    .share-button {
      padding: 0.5rem 0.75rem;
      font-size: 0.8125rem;
    }
    
    .share-button span {
      display: none;
    }
    
    .share-button svg {
      width: 24px;
      height: 24px;
    }
  }
</style>