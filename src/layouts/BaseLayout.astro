---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
  schema?: any;
  prevPage?: string;
  nextPage?: string;
}

const { title, description, ogImage, canonical, schema, prevPage, nextPage } = Astro.props;
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).href;
const ogImageURL = ogImage || `${Astro.site}og-default.jpg`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Preconnect to external domains -->
<link rel="preconnect" href="https://www.googletagmanager.com">
<link rel="preconnect" href="https://dragosroua.substack.com">
<link rel="dns-prefetch" href="https://www.google-analytics.com">
  
  <!-- SEO -->
  <title>{title}</title>
  {description && <meta name="description" content={description}>}
  <link rel="canonical" href={canonicalURL}>
  
  <!-- Pagination Meta Tags -->
  {prevPage && <link rel="prev" href={prevPage}>}
  {nextPage && <link rel="next" href={nextPage}>}
  
  <!-- Enhanced SEO Meta Tags -->
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
  <meta name="author" content="Dragos Roua">
  <meta name="generator" content="Astro + WordPress">
  <!-- Preload critical images (homepage only) -->
    {Astro.url.pathname === '/' && (
    <>
        <link rel="preload" as="image" href="/images/addTaskManager-hero.webp" fetchpriority="high">
        <link rel="preload" as="image" href="/images/dragos-avatar.webp">
    </>
    )}
  
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  {description && <meta property="og:description" content={description}>}
  <meta property="og:image" content={ogImageURL}>
  <meta property="og:site_name" content="Dragos Roua">
  <meta property="og:locale" content="en_US">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalURL}>
  <meta name="twitter:title" content={title}>
  {description && <meta name="twitter:description" content={description}>}
  <meta name="twitter:image" content={ogImageURL}>
  <meta name="twitter:site" content="@dragosroua">
  <meta name="twitter:creator" content="@dragosroua">
  
  <!-- Schema.org -->
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)}></script>
  )}
  
  <!-- Google Analytics - Load on Interaction -->
<script type="module">
  let gaLoaded = false;
  
  function loadGA() {
    if (gaLoaded) return;
    gaLoaded = true;
    
    const script = document.createElement('script');
    script.src = 'https://www.googletagmanager.com/gtag/js?id=G-L2YHBQ9ZSL';
    script.async = true;
    document.head.appendChild(script);
    
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-L2YHBQ9ZSL');
  }
  
  // Load GA on first user interaction OR after 3 seconds (whichever comes first)
  const interactions = ['mousedown', 'mousemove', 'keypress', 'scroll', 'touchstart', 'click'];
  
  interactions.forEach(event => {
    window.addEventListener(event, loadGA, { once: true, passive: true });
  });
  
  // Fallback: load after 3 seconds if no interaction
  setTimeout(loadGA, 3000);
</script>
  
  <style is:global>
    /* WCAG AA Compliant Color Variables */
    :root {
      --color-primary: #4c63d2;        /* Darker blue for better contrast */
      --color-primary-hover: #3d4fd1;  /* Even darker on hover */
      --color-text-primary: #1a202c;   /* Very dark gray for headings */
      --color-text-secondary: #2d3748; /* Dark gray for body text */
      --color-text-muted: #4a5568;     /* Medium gray for meta text */
      --color-text-light: #718096;     /* Light gray for labels */
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        /* NO display property here! */
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 
                   'Helvetica Neue', Arial, sans-serif;
      line-height: 1.6;
      color: var(--color-text-secondary);
      background: #fff;
    }

    /* Accessibility: Better link contrast and distinction */
    a {
      color: var(--color-primary);
      transition: color 0.2s ease;
    }

    a:hover {
      color: var(--color-primary-hover);
    }

    /* Exception: Header and Footer navigation keep their own styles */
    .main-nav a {
      color: #ffffff !important;
    }

    .main-nav a:hover {
      color: #ffffff !important;
    }

    .footer-nav a {
      color: #666 !important;
    }

    .footer-nav a:hover {
      color: #333 !important;
    }

    /* Add underlines to content links for better distinction */
    .wp-content a,
    article p a,
    .page-footer a {
      text-decoration: underline;
      text-decoration-thickness: 1px;
      text-underline-offset: 2px;
    }

    .wp-content a:hover,
    article p a:hover,
    .page-footer a:hover {
      text-decoration-thickness: 2px;
    }

    /* Ensure sufficient contrast for headings */
    h1, h2, h3, h4, h5, h6 {
      color: var(--color-text-primary);
    }
    
    main {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1rem;
      min-height: 60vh;
    }
    
    h1 { 
      font-size: 2.5rem; 
      margin: 0 0 1rem;
      line-height: 1.2;
    }
    
    h2 { 
      font-size: 1.8rem; 
      margin: 2rem 0 1rem;
    }
    
    h3 {
      font-size: 1.4rem;
      margin: 1.5rem 0 0.5rem;
    }
    
    img {
      max-width: 100%;
      height: auto;
    }
    
    .hero-image {
      width: 100%;
      height: auto;
      margin: 2rem 0;
      border-radius: 8px;
    }
    
    /* WordPress content styling */
    .wp-content p {
      margin-bottom: 1em;
    }
    
    .wp-content ul,
    .wp-content ol {
      margin: 1em 0 1em 1.5em;
    }
    
    .wp-content li {
      margin-bottom: 0.5em;
    }
    
    .wp-content blockquote {
      border-left: 4px solid #667eea;
      padding-left: 1em;
      margin: 1.5em 0;
      font-style: italic;
      color: #666;
    }
    
    .wp-content a {
      color: #667eea;
    }
    
    .wp-content a:hover {
      text-decoration: underline;
    }
    
    /* WordPress Columns Layout */
    .wp-block-columns {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      margin: 2rem 0;
    }
    
    .wp-block-column {
      flex: 1;
      min-width: 0; /* Prevents overflow */
    }
    
    /* 3-column responsive layout */
    .wp-block-columns .wp-block-column {
      flex-basis: calc(33.333% - 1.333rem);
    }
    
    /* WordPress embeds in columns */
    .wp-block-column iframe {
      width: 100%;
      max-width: 100%;
      height: auto;
      min-height: 400px;
    }
    
    /* Responsive design for columns */
    @media (max-width: 1024px) {
      .wp-block-columns .wp-block-column {
        flex-basis: calc(50% - 1rem);
      }
    }
    
    @media (max-width: 768px) {
      .wp-block-columns {
        flex-direction: column;
        gap: 1.5rem;
      }
      
      .wp-block-column {
        flex-basis: 100%;
      }
      
      .wp-block-column iframe {
        min-height: 350px;
      }
    }

    /* Tables (for product pages) */
    .wp-content table {
      width: 100%;
      border-collapse: collapse;
      margin: 2em 0;
      overflow-x: auto;
      display: block;
    }
    
    .wp-content th,
    .wp-content td {
      padding: 0.75em;
      border: 1px solid #ddd;
      text-align: left;
    }
    
    .wp-content th {
      background: #f5f5f5;
      font-weight: 600;
    }
    
    @media (max-width: 640px) {
      h1 { font-size: 2rem; }
      h2 { font-size: 1.5rem; }
      main { padding: 1.5rem 1rem; }
    }
  </style>
</head>
<body>
  <Header />
  
  <main>
    <slot />
  </main>
  
  <Footer />
</body>
</html>